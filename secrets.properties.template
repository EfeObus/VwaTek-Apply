# Secrets Configuration (Template)

# IMPORTANT: Do NOT commit the actual secrets.properties file to version control.
# Copy this file to secrets.properties and fill in your actual values.

# ===========================================
# AI API Keys
# ===========================================

# Gemini API Key (Primary)
# Obtain from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Fallback)
# Obtain from: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# LinkedIn OAuth Configuration
# ===========================================
# Obtain from: https://www.linkedin.com/developers/apps
# 
# IMPORTANT: In your LinkedIn app settings, add ALL of these redirect URIs:
#   - http://localhost:8080/linkedin-callback
#   - http://localhost:8081/linkedin-callback
# The app dynamically uses window.location.origin, so the port may vary.

LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:8080/linkedin-callback

# ===========================================
# Google OAuth Configuration
# ===========================================
# Obtain from: https://console.cloud.google.com/

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_APP_PASSWORD=your_google_app_password_here

# ===========================================
# Email Configuration (for notifications)
# ===========================================

EMAIL_ADDRESS=your_email_address_here
EMAIL_APP_PASSWORD=your_app_password_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ===========================================
# Debug Settings
# ===========================================

DEBUG_MODE=false
LOG_LEVEL=INFO

# ===========================================
# Database Configuration
# ===========================================

